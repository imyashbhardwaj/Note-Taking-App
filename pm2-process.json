{
	"apps": [
		{
			"name": "Server",
			"script": "./server/index.js",
			"log_date_format": "YYYY-MM-DD HH:mm Z",
			"instances": "1",
			"env": {
				"NODE_ENV": "production"
			},
			"max_memory_restart": "1G"
		},
        {
			"name": "Client",
			"script": "npm",
            "args": "run dev --prefix ./client",
			"log_date_format": "YYYY-MM-DD HH:mm Z",
			"instances": "1",
			"env": {
				"NODE_ENV": "production"
			},
			"max_memory_restart": "1G"
		}
	]
}
